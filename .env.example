# SERVER SETTINGS
SERVER_PORT=5000
SERVER_CPU_LIMIT=1
SERVER_CPU_RESERVATION=0.5
SERVER_MEMORY_LIMIT=512M
SERVER_MEMORY_RESERVATION=128M
ENV=development

LOG_OUTPUT=./server.log
LOG_LEVEL=debug

# DATABASE CONFIGURATION
DB_USER=root
DB_PASS=your_db_password
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=your_db_name

# REDIS CONFIGURATION
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASS=""

# JWT CONFIGURATION
TOKEN_LIFETIME=36000
REFRESH_TOKEN_LIFETIME=604800

JWT_SECRET="your_jwt_secret"
JWT_REFRESH_SECRET="your_jwt_refresh_secret"
JWT_RESET_SECRET="your_jwt_reset_secret"

# ADMIN & DEBUG PORTS
ADMINER_PORT=5001
DEBUG_PORT=5002

# SMTP CONFIGURATION
SMTP_HOST=smtp.mailgun.org
SMTP_PORT=587
SMTP_USER="your_smtp_user"
SMTP_PASS="your_smtp_password"
SMTP_SENDER_NAME="Your Name"
SMTP_FROM="no-reply@yourdomain.com"

# TRACKER API TAG
TRACKER_API_TAG=latest

# FIREBASE CONFIGURATION
FIREBASE_CONFIG_PATH=firebase.json

# AWS S3 CONFIGURATION
AWS_BUCKET_NAME="your_bucket_name"
AWS_REGION="your_region"
AWS_ACCESS_KEY_ID="your_access_key_id"
AWS_SECRET_ACCESS_KEY="your_secret_access_key"
